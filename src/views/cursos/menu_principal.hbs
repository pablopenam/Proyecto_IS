      <!-- modal nueva carpeta -->


      <div class="row">
        <div class="col-md-12 stretch-card">
          <div class="card">
            <div class="card-body">
              <p class="card-title ">Carpetas</p>
              <hr>
              <div class="row">
                {{#each carpetas}}

                <div class="col-md-4 mx-auto mt-4">
                  <div class="card">
                    <div class="row ">

                      <div class="card-sm mx-auto align-text-bottom  col-md-6" style="margin-left: 0;">
                        <a href="/curso/verCurso/{{Id_Carpeta}}" style="text-decoration: none; color:#143FDE;"><span
                            class="text-uppercase">{{Nombre_carpeta}}</span></a>
                      </div>
                      <div class="card-sm  col-md-4 p-2 ">
                        <a href="/curso/eliminar/{{Id_Carpeta}}" class="btn btn-danger btn-sm"><i
                            class="mdi mdi-delete"></i></a>
                        <a href="/curso/editarCarpeta/{{Id_Carpeta}}" class="btn btn-secondary btn-sm"><i
                            class="mdi mdi-border-color"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
                {{else}}

                <div class="col-md-4 mx-auto">
                  <p>No hay Carpetas creadas!!</p>
                  <p>Haz Click<a href="/curso/addCarpeta"> aqui </a> para Crear Una</p>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>

