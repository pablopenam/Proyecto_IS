
  
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-12 grid-margin">
          <div class="d-flex justify-content-between flex-wrap">
            <div class="d-flex align-items-end flex-wrap">
              <div class="mr-md-3 mr-xl-5">

                <p class="mb-md-0">Acontinuación podrá crear su Rúbrica.</p>
              </div>
              <div class="d-flex">
                <i class="mdi mdi-home text-muted hover-cursor"></i>
                <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Menú Principal&nbsp;/&nbsp;</p>
                <p class="text-primary mb-0 hover-cursor">Crear Rúbrica</p>
              </div>
            </div>

          </div>
        </div>
      </div>
      <!-- modal nueva carpeta -->



      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Informacion del Curso</h4>
            <hr>

            <div class="row w-100">

              <div class=" row form-group col-md-12">
                <label for="Nombre_Rubrica" class="col-form-label col-md-2">Nombre Curso:</label>
                <div class="col-md-10">
                  <label for="Nombre_Rubrica" class="col-form-label col-md-">{{curso.Nombre_Curso}}</label>

                </div>
                <div class=" row form-group col-md-12">
                  <label for="Descripcion_Rubrica" class="col-form-label col-md-2">Descripción Curso:</label>
                  <div class="col-md-10">
                    <label for="Descripcion_Rubrica" class="col-form-label col-md-">{{curso.Descripcion_Curso}}</label>



                  </div>
                </div>
                <div class="row form-group w-100 mt-2 col-md-12">
                  <div class="col-md-4 "> <a class="btn  mt-2 mt-xl-0 btn-sm"
                      style="color: white; background-color: #143FDE;" href="/curso/addAlumno/{{curso.Id_Curso}}"><i
                        class="mdi mdi-plus "></i>Nuevo Alumno</a></div>
                  <div class="col-md-2 btn btn-success " id="btnNuevoCriterio" onclick="tablas();">contar</div>
                  <div class="col-md-4 "></div>
                </div>

                <hr>
              </div>
            </div>
            <br>
            <div class="table-responsive mt-3 ">
              <table class="table table-bordered" id="tabla_curso">
                <thead>
                  <tr>
                    <th>
                      <span>Rut Alumno</span>
                    </th>
                    <th>
                      <span>Nombre Alumno</span>
                    </th>
                    <th>
                      <span>Certamen 1</span>
                    </th>

                  </tr>
                </thead>
                <tbody>
                  {{#each alumno }}
                
                  <tr>
                  
                    <td>{{alumno.Rut_Alumno}}</td>
                    <td class="text-uppercase">{{RowDataPacket.NombreP_Alumno}} {{NombreS_Alumno}} {{ApellidoP_Alumno}} {{ApellidoM_Alumno}}</td>
                    <td></td>
                  
                  </tr>
                 
                  {{else}}

                  <div class="col-md-4 mx-auto">
                    <p>No hay Alumnos inscritos en este Curso</p>

                  </div>
                    
                  {{/each}}
                </tbody>
              </table>

            </div>
            <hr>
            <div class="row form-group w-100 mt-2 col-md-12">
              <div class="col-md-4 "><a href="/curso/verCurso/{{curso.Id_Carpeta}}"
                  class=" mt-2 mt-xl-0 btn btn-success  ">volver</a> </div>
              <div class="col-md-4 "></div>
              <div class="col-md-4 "></div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>



