<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between flex-wrap">


        </div>
      </div>
    </div>
    <!-- modal nueva carpeta -->


    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title  text-uppercase">Lista de Cotejo: {{lista.Nombre_ListaCotejo}}</h4>
          <hr>
          <div class="table-responsive pt-3">
            <table class="table table-bordered" id="tableRubrica3">
              <thead>
                <tr>
                  <th class="titulo-tabla">
                    <div class="col-md-12 text-center"><span>Criterios</span></div>
                  </th>
                  <th>
                    <div class="col-md-12 text-center"><span>Â¿Logrado?</span></div>
                  </th>
                  <th>
                    <div class="col-md-12 text-center"><span>Observacion</span></div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each LCotejo}}

                <tr>
                  <form action="evaluarListaCotejo/" method="post">
                    <td> {{Descripcion_CriterioListaCotejo}} <input type="hidden" name="Id_CriterioListaCotejo" id=""
                        value="{{ Id_CriterioListaCotejo}}"></td>
                    <td class=" text-center w-200">
                      <div class="form-check form-check-inline ">
                        <input class="form-check-input" type="checkbox" name="logrado" value="SI">
                        <label class="form-check-label" for="inlineRadio1">SI</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="logrado" value="NO">
                        <label class="form-check-label" for="inlineRadio2">NO</label>
                      </div>

                    </td>
                    <td class="text-center">
                      <textarea class="w-100" name="Observacion_ListaCotejo" id="" rows="3"></textarea>
                    </td>

                </tr>
                {{/each}}
              </tbody>
            </table>
            <hr>

            <div class="col-md-4 "></div>
            <div class="col-md-4 mx-auto "><input type="submit" class="float-right w-50 btn btn-success btn-sm"
                style="color: white; background-color: #143FDE;" value="Evaluar"></div>
            <div class="col-md-4  mr-2 "></div>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>